<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupWithSocialMediaInActive">

    <ImageView
        android:id="@+id/close"
        android:layout_width="14dp"
        android:layout_height="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="29dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/ic_close"
        android:contentDescription="@string/closewindow"
        />

    <RelativeLayout
        android:id="@+id/fb_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toBottomOf="@+id/close"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="39dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/socialmedia_signup_background"
        android:gravity="center">

        <ImageView
            android:id="@+id/fb_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_fb"
            android:contentDescription="fb logo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/fb_logo"
            android:layout_marginTop="3dp"
            android:layout_marginStart="18dp"
            android:text="Continue with Facebook"
            android:textSize="15sp"
            android:textColor="#fff"
            android:fontFamily="@font/gilroysemibold"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/google_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toBottomOf="@+id/fb_btn"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/google_btn_active"
        android:gravity="center">

        <ImageView
            android:id="@+id/google_logo"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/ic_google_ogo"
            android:contentDescription="google logo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/google_logo"
            android:layout_marginTop="3dp"
            android:layout_marginStart="18dp"
            android:text="Continue with Google"
            android:textSize="15sp"
            android:textColor="#484848"
            android:fontFamily="@font/gilroysemibold"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/line_txt"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        app:layout_constraintTop_toBottomOf="@+id/google_btn"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        >

            <View
                android:id="@+id/line"
                android:layout_width="165dp"
                android:layout_height="26dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="15.5dp"
                android:background="@drawable/line"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/line"
                android:text="or"
                android:textSize="15sp"
                android:textColor="#030303"
                android:fontFamily="@font/gilroysemibold"
                android:elevation="10dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
            />

        <View
            android:layout_width="165dp"
            android:layout_height="26dp"
            android:layout_toRightOf="@+id/txt1"
            android:layout_marginTop="16dp"
            android:layout_marginStart="15.5dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/line"
            android:layout_centerVertical="true"
            />
   </RelativeLayout>

    <Button
        android:id="@+id/signUpWithMobileNumberBtn"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        app:layout_constraintTop_toBottomOf="@+id/line_txt"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="Sign up with mobile number"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:background="@drawable/signup_background"
        android:fontFamily="@font/gilroysemibold"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/signUpWithMobileNumberBtn"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="27dp">

        <TextView
            android:id="@+id/signinLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Do you already have an account? "
            android:textSize="15sp"
            android:textColor="@color/greyishBrown"
            android:fontFamily="@font/gilroyregular"
            android:textAlignment="center"
            android:letterSpacing="0.1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/signinLabel"
            android:text="Login here"
            android:textSize="15sp"
            android:textColor="@color/orange"
            android:fontFamily="@font/gilroysemibold"
            android:textAlignment="center"
            android:letterSpacing="0.1"
            />




    </RelativeLayout>






