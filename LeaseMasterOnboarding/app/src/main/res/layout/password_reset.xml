<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PasswordReset">

    <ImageView
        android:id="@+id/close"
        android:layout_width="14dp"
        android:layout_height="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="29dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/ic_close"
        android:contentDescription="@string/closewindow"
        />

    <TextView
        android:id="@+id/addMobileNumberLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="71dp"
        android:layout_marginStart="24dp"
        android:text="Reset password"
        android:textSize="24sp"
        android:textColor="@color/greyishBrown"
        android:fontFamily="@font/gilroysemibold"
        android:lineHeight="22dp"
        />

    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/addMobileNumberLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="13dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="A reset password link will be sent to your email address. Follow to create a new password."
        android:textSize="15sp"
        android:textColor="@color/greyishBrown"
        android:fontFamily="@font/gilroyregular"
        android:lineHeight="22dp"
        />

    <EditText
        android:id="@+id/emailAddress"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        app:layout_constraintTop_toBottomOf="@+id/label"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="44dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:hint="Enter email address here"
        android:textSize="16sp"
        android:textColor="@color/blackText"
        android:fontFamily="@font/gilroymedium"
        android:background="@drawable/edit_text_background"
        android:inputType="number"
        android:letterSpacing="0.1"
        />

    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        app:layout_constraintTop_toBottomOf="@+id/emailAddress"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="Submit"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textColor="@color/whiteTextColor"
        android:background="@drawable/signup_background"
        android:fontFamily="@font/gilroysemibold"
        android:elevation="1dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>