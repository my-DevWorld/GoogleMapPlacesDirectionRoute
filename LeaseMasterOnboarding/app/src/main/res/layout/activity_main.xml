<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:text="You're Login"
        android:textSize="35sp"
        android:textColor="@color/blackText"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/landingPage"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Landing Page"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:background="@drawable/signup_background"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/gilroysemibold"
        />


    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        app:layout_constraintTop_toBottomOf="@+id/landingPage"
        android:text="Sign up"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:background="@drawable/signup_background"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/gilroysemibold"
        />

    <Button
        android:id="@+id/next1"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        app:layout_constraintTop_toBottomOf="@+id/next"
        android:layout_marginTop="25dp"
        android:text="Signup Social media active"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:background="@drawable/signup_background"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/gilroysemibold"
        />

    <Button
        android:id="@+id/next2"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        app:layout_constraintTop_toBottomOf="@+id/next1"
        android:layout_marginTop="25dp"
        android:text="Signup Social media"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:background="@drawable/signup_background"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/gilroysemibold"
        />

    <Button
        android:id="@+id/verification"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        app:layout_constraintTop_toBottomOf="@+id/next2"
        android:layout_marginTop="25dp"
        android:text="Verification"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:background="@drawable/signup_background"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/gilroysemibold"
        />

    <Button
        android:id="@+id/propertyDetails"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        app:layout_constraintTop_toBottomOf="@+id/verification"
        android:layout_marginTop="25dp"
        android:text="Property Details"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:background="@drawable/signup_background"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/gilroysemibold"
        />

    <Button
        android:id="@+id/saveToList"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        app:layout_constraintTop_toBottomOf="@+id/propertyDetails"
        android:layout_marginTop="25dp"
        android:text="Save to list"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:background="@drawable/signup_background"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/gilroysemibold"
        />


</androidx.constraintlayout.widget.ConstraintLayout>