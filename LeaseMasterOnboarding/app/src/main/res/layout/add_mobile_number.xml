<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMobileNumber">

    <TextView
        android:id="@+id/addMobileNumberLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="71dp"
        android:layout_marginStart="24dp"
        android:text="Add mobile number"
        android:textSize="24sp"
        android:textColor="@color/greyishBrown"
        android:fontFamily="@font/gilroysemibold"
        android:lineHeight="22dp"
        />

    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/addMobileNumberLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="13dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="We know you always have your phone, and we want to be able to reach you easily"
        android:textSize="15sp"
        android:textColor="@color/greyishBrown"
        android:fontFamily="@font/gilroyregular"
        android:lineHeight="22dp"
        />

    <EditText
        android:id="@+id/phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        app:layout_constraintTop_toBottomOf="@+id/label"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="44dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:hint="Enter mobile number"
        android:textSize="16sp"
        android:textColor="@color/blackText"
        android:fontFamily="@font/gilroymedium"
        android:background="@drawable/edit_text_background"
        android:inputType="number"
        android:letterSpacing="0.1"
        />

    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        app:layout_constraintTop_toBottomOf="@+id/phoneNumber"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="Continue"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textColor="@color/whiteTextColor"
        android:background="@drawable/signup_background"
        android:fontFamily="@font/gilroysemibold"
        android:elevation="1dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>

